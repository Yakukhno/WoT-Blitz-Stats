<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark">


    <com.rey.material.widget.EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/editNickname"
        android:textSize="22dp"
        android:background="@android:color/white"
        android:hint="Enter nickname"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.rey.material.widget.Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="Go"
        android:textColor="@android:color/white"
        android:id="@+id/btnGo"
        android:background="@color/orange_button"
        app:rd_enable="true"
        app:rd_rippleType="touch"
        app:rd_maxRippleRadius="50dp"
        app:rd_rippleColor="@color/orange_button_pressed"
        app:rd_backgroundColor="@color/orange_button_hover"
        android:layout_below="@+id/editNickname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Go"
        android:id="@+id/txtBattles"
        android:textColor="@android:color/white"
        android:layout_below="@+id/btnGo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@mipmap/icon2"
        android:layout_above="@+id/editNickname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>